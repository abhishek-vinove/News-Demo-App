<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="@dimen/_10sdp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/author_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/news_image"
        android:text="@string/author"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/news_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/news_image"
        android:layout_toEndOf="@+id/author_heading"
        android:layout_marginStart="@dimen/_10sdp"
       />


    <TextView
        android:id="@+id/title_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/news_author"
        android:text="@string/title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/news_author"
        android:layout_toEndOf="@+id/title_heading"
        android:layout_marginStart="@dimen/_10sdp" />

    <TextView
        android:id="@+id/description_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/news_title"
        android:text="@string/description"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/news_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/news_title"
        android:layout_toEndOf="@+id/description_heading"
        android:layout_marginStart="@dimen/_10sdp" />


</RelativeLayout>
